REPO_DIRS=($BASE $ANDROID $ELISP $ERLANG $GUILE $HASKELL)

GITHUB=ssh://my-github/rashack
GITLAB=ssh://my-gitlab

REPOS=(
    .skel                   $HOME                      $GITHUB/skel.git
    alpha-words.hs          $HASKELL                   $GITHUB/alpha-words.hs.git
    apl-altgr               $BASE                      $GITHUB/apl-altgr.git
    byte-frequency          $BASE                      $GITHUB/byte-frequency.git
    count-srv               $ERLANG                    $GITHUB/count-srv.git
    dream                   $BASE                      $GITHUB/dream.git
    duplicates              $BASE                      $GITHUB/duplicates.git
    elife                   $ELISP                     $GITHUB/elife.git
    gapd                    $GUILE                     $GITHUB/gapd.git
    guile-zeromq-3          $GUILE                     $GITHUB/guile-zeromq-3.git
    h2048                   $HASKELL                   $GITHUB/h2048.git
    nexus-personal          $BASE                      $GITHUB/nexus-personal.git
    parse-bash-hist         $HASKELL                   $GITHUB/parse-bash-history.git
    qfpl-code-problem       $HASKELL                   $GITHUB/qfpl-code-problem.git
    scheme-in-48h           $HASKELL                   $GITHUB/scheme-in-48h.git
    sine-table              $HASKELL                   $GITHUB/sine-table.hs.git
    solarized-grey          $ELISP                     $GITHUB/solarized-grey.git

    android-http-get        $ANDROID                   $GITLAB/android-http-get.git
    android-play            $ANDROID                   $GITLAB/android-play.git
    bitbucket               $BASE                      $GITLAB/bitbucket.git
    cryptochallange         $BASE                      $GITLAB/cryptochallange.git
    doc                     $BASE                      $GITLAB/doc.git
    fp101x                  $HASKELL                   $GITLAB/fp101x.git
    kebts                   $ERLANG                    $GITLAB/kebts.git
    misclib                 $ERLANG                    $GITLAB/misclib.git
    mshell                  $BASE                      $GITLAB/mshell.git
    notes                   $BASE                      $GITLAB/notes.git
    pyfi                    $BASE                      $GITLAB/pyfi.git
    scherl                  $ERLANG                    $GITLAB/scherl.git
    simple-rest             $ERLANG                    $GITLAB/simple-rest.git
    slask                   $BASE                      $GITLAB/slask.git
    # coursera-algo
    # coursera-algo2
