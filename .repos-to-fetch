#!/bin/sh

REPO_NAME_IDX=0
REPO_DIR_IDX=1
REPO_REMOTE_IDX=2
REPO_ELEMENTS=3

# automatically add a repo line with:
# printf "    %-19s %-38s %s\n"  "$(basename $(pwd))" "$(realpath --relative-to=$HOME $(pwd))" "$(git remote get-url origin)"

BASE="$HOME/src/kjell"
ANDROID=$BASE/android
ELISP=$BASE/elisp
ERLANG=$BASE/erlang
GUILE=$BASE/guile
