#!/bin/bash

DZEN_OPTS=" -fn -misc-fixed-medium-r-semicondensed-*-13-120-75-75-c-60-iso8859-* -bg #044084"
DZEN_TIMEBAR_WIDTH=180
DZEN_STATUS_X=$DZEN_TIMEBAR_WIDTH

case $(hostname) in
    pringle)
	SCREEN_WIDTH=1920
	DZEN_STATUS_WIDTH=1320
	CONKY_IF=eth0
	DZEN_OPTS="$DZEN_OPTS -xs 1"
	;;
    kjelldesktop)
	SCREEN_WIDTH=1680
	DZEN_STATUS_WIDTH=1070
	CONKY_IF=eth1
	DZEN_OPTS="$DZEN_OPTS -xs 0"
	;;
    tp)
	SCREEN_WIDTH=1280
	DZEN_STATUS_WIDTH=650
	CONKY_IF=wlan0
	CONKY_EXTRA=' | bat: ${battery_short}'
	DZEN_OPTS="$DZEN_OPTS -xs 1"
	;;
esac

DZEN_LOAD_X=$(( $DZEN_STATUS_X + $DZEN_STATUS_WIDTH ))
DZEN_LOAD_WIDTH=$(( $SCREEN_WIDTH - $DZEN_STATUS_X - $DZEN_STATUS_WIDTH ))

export DZEN_OPTS
export DZEN_TIMEBAR_WIDTH
export DZEN_STATUS_WIDTH
export DZEN_STATUS_X
export DZEN_LOAD_X
export DZEN_LOAD_WIDTH
export CONKY_IF
export CONKY_EXTRA
