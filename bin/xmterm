#!/bin/bash

set -euo pipefail

XTERM_BG=black
XTERM_FG=gray

while getopts "w" opt ; do
    case $opt in
        w) XTERM_BG=white
           XTERM_FG=black
           shift
           ;;
    esac
done

xterm -fg $XTERM_FG -bg $XTERM_BG -cr red -ls +mb -sl 8192 -vb +sb -tn xterm-256color -fn -misc-fixed-medium-r-semicondensed-*-13-120-75-75-c-60-iso8859-* -en en_US.utf8 $@ &
